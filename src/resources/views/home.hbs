<div class='mt-6'>
    <div class='row'>
        {{#each courses}}
            <div class='col-sm-6 col-lg-4 course'>
                <div class='card card-course-item'>
                    <a href='/courses/{{this.slug}}'>
                        <img src='{{this.image}}' class='card-img-top' alt='Card Image' />
                    </a>
                    <div class='card-body'>
                        <a href='/courses/{{this.slug}}'>
                            <h5 class='card-title'>{{this.name}}</h5>
                        </a>
                        <p class='card-text'>{{this.description}}</p>
                        <a href='#' class='btn btn-primary btn-buy'>Mua khoá học</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>